source 'https://rubygems.org'

# Specify the version of Jekyll you are using
gem 'jekyll', '~> 4.3'

# Add CSV and base64 gems to address Ruby warnings
gem 'csv' # Add CSV gem to avoid warnings about it being removed from the standard library
gem 'base64' # Add base64 gem to avoid warnings about it being removed from the standard library

# Group for Jekyll plugins
group :jekyll_plugins do
  gem 'jekyll-timeago', '~> 0.13.1'
  gem 'jekyll-multiple-languages-plugin', '~> 1.8.0' # Specify the version to ensure compatibility
end
